<?xml version="1.0"?>
<config>
    <modules>
        <WS_News>
            <version>0.1.0</version>
        </WS_News>
    </modules>
    <global>
        <helpers>
            <news>
                <class>WS_News_Helper</class>
            </news>
        </helpers>
        <blocks>
            <news>
                <class>WS_News_Block</class>
            </news>
        </blocks>
    </global>
    <admin>
        <routers>
            <news>
                <use>admin</use>
                <args>
                    <module>WS_News</module>
                    <frontName>admin_news</frontName>
                </args>
            </news>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <news module="news">
                <title>News</title>
                <sort_order>100</sort_order>
                <children>
                    <newsbackend module="news">
                        <title>News</title>
                        <sort_order>0</sort_order>
                        <action>admin_news/adminhtml_newsbackend</action>
                    </newsbackend>
                </children>
            </news>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <news translate="title" module="news">
                            <title>News</title>
                            <sort_order>1000</sort_order>
                            <children>
                                <newsbackend translate="title">
                                    <title>News</title>
                                </newsbackend>
                            </children>
                        </news>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <news>
                    <file>news.xml</file>
                </news>
            </updates>
        </layout>
    </adminhtml>
</config> 